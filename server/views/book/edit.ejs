<%- include('../partials/header.ejs') %>
    
<%- include('../partials/main_nav.ejs') %>


<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
             <div class="form-group">
                <label for="nameTextField">Name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the contact name"
                name="name" 
                value="<%= book.name %>"
                required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Number</label>
                <input type="text" class="form-control"
                id="numberTextField"
                placeholder="Enter the contact number"
                name="number" 
                value="<%= book.number %>"
                required>
            </div>

            <div class="form-group">
                <label for="priceTextField">Email</label>
                <input type="text" class="form-control"
                id="emailaddressTextField"
                placeholder="Enter the Email Address"
                name="emailaddress" 
                value="<%= book.emailaddress %>"
                required>
            </div>
            
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
            
                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>

        </form>   

        </div>
    </div>
</div>

<%- include('../partials/bottom_nav.ejs') %>
    
<%- include('../partials/footer.ejs') %>